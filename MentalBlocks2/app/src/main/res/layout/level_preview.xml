<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="60dp"
                                                   android:layout_height="60dp"
                                                   android:layout_margin="5dp">

    <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/blue"
            android:id="@+id/vw_external" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <View
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@color/lightestGray"
            android:id="@+id/vw_internal"
            app:layout_constraintTop_toTopOf="@+id/vw_external"
            app:layout_constraintEnd_toEndOf="@+id/vw_external"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/vw_external"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:textColor="@color/darkGray"
            android:textSize="30dp"
            android:gravity="center"

            android:id="@+id/tv_nLevelCard"
            app:layout_constraintTop_toTopOf="@+id/vw_external"
            app:layout_constraintEnd_toEndOf="@+id/vw_external"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/vw_external" android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>